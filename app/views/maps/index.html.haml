- content_for :title, "Maps"

- content_for :breadcrumbs, breadcrumbs([["Maps", maps_path]])

%section.hero.is-primary
  .hero-body
    .container
      = link_to new_map_path do
        %h1.title New map >

- if @maps.empty?
  No maps available!
- else
  .section
    .container
      %h2.title Current maps

      - @maps.each do |map|
        %p
          %strong= map.name
          %br
          = map.description
          %br
          = link_to "Edit >", edit_map_path(map)
          |
          = link_to "Destroy >", map_path(map),
            method: :delete, data: { confirm: "Are you sure?" }
