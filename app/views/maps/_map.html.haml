.card.card--equal-height
  = link_to map_path(map) do
    .card-content
      .content
        %p.title= map.name
        %p.subtitle= map.description
  %footer.card-footer
    = link_to 'Edit', edit_map_path(map), class: 'card-footer-item'
    = link_to 'Destroy', map_path(map), class: 'card-footer-item',
      method: :delete, data: { confirm: "Are you sure?" }

