= form_for :password, url: passwords_path do |form|
  = render "sessions/errors"

  .field.text-field
    = form.label :email, class: 'label'
    .control
      = form.text_field :email, type: 'email', class: 'input'
  .field.submit-field
    .control
      = form.submit I18n.t("helpers.submit.password.submit"),
        class: 'button is-primary'
