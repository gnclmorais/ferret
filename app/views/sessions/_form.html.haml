= form_for :session, url: session_path do |form|
  = render "sessions/errors"

  .field.text-field
    = form.label :email, class: 'label'
    .control
      = form.text_field :email, type: 'email', class: 'input', tabindex: 1,
        autofocus: true

  .field.password-field
    = form.label :password, class: 'label' do
      Password
      = link_to t('.forgot_password'), new_password_path, tabindex: 0,
        class: 'is-pulled-right has-text-weight-normal'
    .control
      = form.password_field :password, class: 'input', tabindex: 1

  .field.submit-field
    .control
      = form.submit I18n.t('helpers.submit.session.submit'),
        class: 'button is-primary', tabindex: 1
      - if Clearance.configuration.allow_sign_up?
        = link_to t('.sign_up'), sign_up_path, tabindex: 1,
          class: 'button is-pulled-right'
